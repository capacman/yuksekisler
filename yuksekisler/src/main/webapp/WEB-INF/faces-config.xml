<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<resource-bundle>
			<base-name>yuksekislermessages</base-name>
			<var>msgs</var>
		</resource-bundle>
		<system-event-listener>
			<system-event-listener-class>com.yuksekisler.infrastructure.jsf.ViewScopeCallbackRegistrar</system-event-listener-class>
			<system-event-class>javax.faces.event.PostConstructViewMapEvent</system-event-class>
			<source-class>javax.faces.component.UIViewRoot</source-class>
		</system-event-listener>

		<system-event-listener>
			<system-event-listener-class>com.yuksekisler.infrastructure.jsf.ViewScopeCallbackRegistrar</system-event-listener-class>
			<system-event-class>javax.faces.event.PreDestroyViewMapEvent</system-event-class>
			<source-class>javax.faces.component.UIViewRoot</source-class>
		</system-event-listener>
	</application>

	<navigation-rule>
		<display-name>*</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>*</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/pages/equipment/new.xhtml</display-name>
		<from-view-id>/pages/equipment/new.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/equipment/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>New Employee</display-name>
		<from-view-id>/pages/employee/new.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/employee/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>List Employee</display-name>
		<from-view-id>/pages/employee/list.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>view</from-outcome>
			<to-view-id>/pages/employee/list.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{employeeController.employee.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/pages/equipment/list.xhtml</display-name>
		<from-view-id>/pages/equipment/list.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>view</from-outcome>
			<to-view-id>/pages/equipment/view.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{equipmentController.equipment.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>equipments</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>equipment</from-outcome>
			<to-view-id>/pages/equipment/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>administration</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>administration</from-outcome>
			<to-view-id>/pages/equipment/newBrandCategory.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/login.xhtml</display-name>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/equipment/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
