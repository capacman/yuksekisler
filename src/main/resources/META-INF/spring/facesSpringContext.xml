<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="localeResolver"
		class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
		<property name="defaultLocale">
			<bean class="java.util.Locale">
				<constructor-arg index="0" value="EN" />
			</bean>
		</property>
	</bean>
	<bean id="equipmentController" class="com.yuksekisler.interfaces.web.jsf.EquipmentController">
		<property name="equipmentService" ref="equipmentService" />
		<property name="sessionInfo" ref="sessionInfo" />
	</bean>

	<bean id="employeeController" class="com.yuksekisler.interfaces.web.jsf.EmployeeController"
		scope="request">
		<property name="employeeService" ref="employeeService" />
	</bean>
	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="classpath:yuksekislermessages" />
		<property name="defaultEncoding" value="UTF-8" />
	</bean>
	<bean id="sessionInfo" class="com.yuksekisler.interfaces.web.jsf.SessionInfo">
		<property name="localeResolver" ref="localeResolver" />
		<property name="messageSource" ref="messageSource" />
		<property name="authenticationManager"
			ref="org.springframework.security.authenticationManager" />
	</bean>
	<bean id="credentials" class="com.yuksekisler.interfaces.web.jsf.Credentials" />
	<bean id="applicationController" class="com.yuksekisler.interfaces.web.jsf.Application" />
</beans>
