<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<resource-bundle>
			<base-name>yuksekislermessages</base-name>
			<var>msgs</var>
		</resource-bundle>
		<system-event-listener>
			<system-event-listener-class>com.yuksekisler.infrastructure.spring.ViewScopeCallbackRegistrar</system-event-listener-class>
			<system-event-class>javax.faces.event.PostConstructViewMapEvent</system-event-class>
			<source-class>javax.faces.component.UIViewRoot</source-class>
		</system-event-listener>
		<system-event-listener>
			<system-event-listener-class>com.yuksekisler.infrastructure.spring.ViewScopeCallbackRegistrar</system-event-listener-class>
			<system-event-class>javax.faces.event.PreDestroyViewMapEvent</system-event-class>
			<source-class>javax.faces.component.UIViewRoot</source-class>
		</system-event-listener>
	</application>

	<navigation-rule>
		<display-name>*</display-name>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>newequipment</from-outcome>
			<to-view-id>/pages/equipment/new.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>definitions</from-outcome>
			<to-view-id>/pages/definitions.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>work</from-outcome>
			<to-view-id>/pages/work/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>newwork</from-outcome>
			<to-view-id>/pages/work/new.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>equipment</from-outcome>
			<to-view-id>/pages/equipment/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/login.xhtml</display-name>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/equipment/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/pages/equipment/list.xhtml</display-name>
		<from-view-id>/pages/equipment/list.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>view</from-outcome>
			<to-view-id>/pages/equipment/view.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{equipmentViewController.equipmentId}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/pages/equipment/view.xhtml</display-name>
		<from-view-id>/pages/equipment/view.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>addInspectionReport</from-outcome>
			<to-view-id>/pages/equipment/newInspectionReport.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{equipmentViewController.equipmentId}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>edit</from-outcome>
			<to-view-id>/pages/equipment/edit.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{equipmentViewController.equipmentId}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/pages/equipment/edit.xhtml</display-name>
		<from-view-id>/pages/equipment/edit.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>view</from-outcome>
			<to-view-id>/pages/equipment/view.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{equipmentFormController.equipment.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/pages/equipment/newInspectionReport.xhtml</display-name>
		<from-view-id>/pages/equipment/newInspectionReport.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>view</from-outcome>
			<to-view-id>/pages/equipment/view.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{equipmentFormController.equipment.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/pages/work/list.xhtml</display-name>
		<from-view-id>/pages/work/list.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>view</from-outcome>
			<to-view-id>/pages/work/view.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{workViewController.workId}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/pages/work/view.xhtml</display-name>
		<from-view-id>/pages/work/view.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>edit</from-outcome>
			<to-view-id>/pages/work/edit.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{workViewController.workId}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>/pages/work/edit.xhtml</display-name>
		<from-view-id>/pages/work/edit.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>view</from-outcome>
			<to-view-id>/pages/work/view.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>id</name>
					<value>#{workFormController.equipment.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>
</faces-config>
